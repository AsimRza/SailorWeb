@model SailorWeb.Models.Model.PageIdentity_TBL
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Səhifə tənzimləmələri</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="/Home/Index"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="/PageIdentity/Index">Səhifə tənzimləmələri</a></li>

                        </ol>
                    </nav>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0">Məlumatlar</h3>
                </div>
                <!-- Light table -->
                <div class="table-responsive" style=" min-height: 300px !important;">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col" class="sort">Səhifə Yazar</th>
                                <th scope="col" class="sort">Səhifə Açıqlaması</th>
                                <th scope="col" class="sort">Açar sözlər</th>
                                <th scope="col">Səhifə başlığı</th>
                                <th scope="col">Logo</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody class="list">

                          
                            <tr>
                                <td>
                                    @Model.MetaAuthor
                                </td>
                                <td>
                                    @if (@Model.MetaDescription == null)
                                    {
                                        @Model.MetaDescription
                                    }
                                    else
                                    {

                                        if (@Model.MetaDescription.Length > 100)
                                        {
                                        @Model.MetaDescription.Substring(0, 100) @("...")
                                        }
                                        else
                                        {
                                        @Model.MetaDescription
                                        }
                                    }
                                </td>
                                <td>
                                    @if (@Model.MetaKeywords == null)
                                    {
                                        @Model.MetaKeywords
                                    }
                                    else
                                    {

                                        if (@Model.MetaKeywords.Length > 70)
                                        {
                                        @Model.MetaKeywords.Substring(0, 70) @("...")
                                        }
                                        else
                                        {
                                        @Model.MetaKeywords
                                        }
                                    }

                                </td>
                                <td>
                                    @Model.PageTitle
                                </td>
                                <td>
                                    <div class="avatar-group">
                                        <a href="#" class="avatar avatar-sm rounded-circle" data-toggle="tooltip" data-original-title="Ryan Tompson">

                                            <img src="@Model.LogoURL" />  
                                        </a>
                                   
                                    </div>
                                </td>
                                <td class="text-right">
                                    <div class="dropdown">
                                        <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </a>
                                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                             <a class="dropdown-item" href="/PageIdentity/Details/@Model.PId"><i class="fas fa-eye text-info"></i>Ətraflı Bax</a>
                                            <a class="dropdown-item" href="/PageIdentity/Edit/@Model.PId"><i class="fas fa-sync-alt text-primary"></i>Redaktə et</a>

                                        </div>
                                    </div>
                                </td>
                            </tr>
                            




                        </tbody>
                    </table>
                </div>
                <!-- Card footer -->
