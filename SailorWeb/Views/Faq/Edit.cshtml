@model SailorWeb.Models.Model.Faq_TBL

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">FAQ</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="/Home/Index"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="/Faq/Index">FAQ</a></li>
                            <li class="breadcrumb-item"><a href="/Faq/Edit/@Model.FaqId">Redaktə</a></li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href="/FAQ/Create" class="btn btn-sm btn-success">Yeni əlavə et</a>
                    <a href="/FAQ/Delete/@Model.FaqId" class="btn btn-sm btn-danger">Sil</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0">Məlumat redaktə et</h3>

                </div>
                <!-- Light table -->
                <hr />
                <div class="pl-3">
                    @using (Html.BeginForm("Edit", "FAQ", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.FaqId)

                            <div class="form-group">
                                @Html.LabelFor(model => model.FaqHeader, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <textarea name="FaqHeader" id="FaqHeader" class="form-control" cols="300" rows="4">@Model.FaqHeader</textarea>

                                    @Html.ValidationMessageFor(model => model.FaqHeader, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.FaqDescription, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <textarea name="FaqDescription" id="FaqDescription" class="form-control" cols="300" rows="10">@Model.FaqDescription</textarea>

                                    @Html.ValidationMessageFor(model => model.FaqDescription, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Yadda saxla" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
    </div>

</div>
