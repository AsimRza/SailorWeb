@model IEnumerable<SailorWeb.Models.Model.Services_TBL> 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Xidmətlərimiz</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="/Home/Index"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="/Services/Index">Xidmətlərimiz</a></li>

                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href="/Services/Create" class="btn btn-sm btn-success">Yeni əlavə et</a>
                    <!-- <a href="#" class="btn btn-sm btn-neutral">Filters</a>-->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0">Məlumatlar</h3>
                </div>
                <!-- Light table -->
                <div class="table-responsive" style=" min-height: 300px !important;">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col" class="sort">Xidmətin adı</th>
                                <th scope="col" class="sort">Xidmətin açıqlaması</th>
                                <th scope="col" class="sort">Xidmət icon</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody class="list">

                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>
                                       @item.ServiceName
                                    </td>
                                    <td>
                                        @if (item.ServiceDescription == null)
                                        {
                                            @item.ServiceDescription
                                        }
                                        else
                                        {

                                            if (item.ServiceDescription.Length > 100)
                                            {

                                                @item.ServiceDescription.Substring(0, 100) @("...")
                                            }
                                            else
                                            {
                                                @item.ServiceDescription
                                            }
                                        }
                                    </td>
                                    <td>
                                        @item.ServiceIcon
                                    </td>
                                    <td class="text-right">
                                        <div class="dropdown">
                                            <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <i class="fas fa-ellipsis-v"></i>
                                            </a>
                                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                                <a class="dropdown-item" href="/Services/Details/@item.ServiceId"><i class="fas fa-eye text-info"></i>Ətraflı Bax</a>
                                                <a class="dropdown-item" href="/Services/Edit/@item.ServiceId"><i class="fas fa-sync-alt text-primary"></i>Redaktə et</a>
                                                <a class="dropdown-item" href="/Services/Delete/@item.ServiceId"><i class="fas fa-trash-alt text-danger"></i>Sil</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>


                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>


