@model SailorWeb.Models.Model.About_TBL
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Haqqımızda</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="/Home/Index"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="/About/Index">Haqqımızda</a></li>

                        </ol>
                    </nav>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0">Məlumatlar</h3>
                </div>
                <!-- Light table -->
                <div class="table-responsive" style=" min-height: 300px !important;">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col" class="sort">Başlıq</th>
                                <th scope="col" class="sort">Qısa başlıq</th>
                                <th scope="col" class="sort">Açıqlama</th>
                                <th scope="col" class="sort"></th>
                        
                            </tr>

                        </thead>
                        <tbody class="list">
                                <tr>
                                    <td>
                                        @if (Model.AboutHeader == null)
                                        {
                                            @Model.AboutHeader
                                        }
                                        else
                                        {
                                            if (Model.AboutHeader.Length > 60)
                                            {
                                                @Model.AboutHeader.Substring(0, 60) @("...")
                                            }
                                            else
                                            {
                                                @Model.AboutHeader
                                            }
                                        }
                                    </td>
                                    <td>
                                        @if (Model.AboutShHeader == null)
                                        {
                                            @Model.AboutShHeader
                                        }
                                        else
                                        {
                                            if (Model.AboutShHeader.Length > 60)
                                            {
                                            @Model.AboutShHeader.Substring(0, 60) @("...")
                                            }
                                            else
                                            {
                                            @Model.AboutShHeader
                                            }
                                        }
                                    </td>
                                    <td>
                                        @if (Model.AboutDescrition == null)
                                        {
                                            @Model.AboutDescrition
                                        }
                                        else
                                        {

                                        if (Model.AboutDescrition.Length > 100)
                                        {
                                            @Model.AboutDescrition.Substring(0, 100) @("...")
                                        }
                                        else
                                        {
                                            @Model.AboutDescrition
                                        }
                                        }
                                    </td>
                               
                                  
                                    <td class="text-right">
                                        <div class="dropdown">
                                            <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <i class="fas fa-ellipsis-v"></i>
                                            </a>
                                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                                <a class="dropdown-item" href="/About/Details/@Model.AboutId"><i class="fas fa-eye text-info"></i>Ətraflı Bax</a>
                                                <a class="dropdown-item" href="/About/Edit/@Model.AboutId"><i class="fas fa-sync-alt text-primary"></i>Redaktə et</a>

                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            




                        </tbody>
                    </table>
                </div>
                <!-- Card footer -->
                @*          <div class="card-footer py-4">
                        <nav aria-label="...">
                            <ul class="pagination justify-content-end mb-0">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1">
