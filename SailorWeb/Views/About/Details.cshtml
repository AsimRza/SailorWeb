@model SailorWeb.Models.Model.About_TBL

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Əlaqə</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="/Home/Index"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="/About/Index">Haqqımızda</a></li>
                            <li class="breadcrumb-item"><a href="/About/Details/@Model.AboutId">Ətraflı</a></li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">

                    <a href="/About/Edit/@Model.AboutId" class="btn btn-sm btn-neutral">Redaktə et</a>

                </div>
            </div>
        </div>
    </div>
</div>


<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0">Ətraflı baxış</h3>
                </div>
                <!-- Light table -->
                <hr />

                <div class="pl-3">
                    <dl class="dl-horizontal">
                        <dt class="text-danger">
                            @Html.DisplayNameFor(model => model.AboutHeader)
                        </dt>

                        <dd class="mt-2">
                            @Html.DisplayFor(model => model.AboutHeader)
                        </dd>
                        <hr style="width:101%" class="ml--3" />
                        <dt class="text-danger mt-4">
                            @Html.DisplayNameFor(model => model.AboutShHeader)
                        </dt>

                        <dd class="mt-2">
                            @Html.DisplayFor(model => model.AboutShHeader)
                        </dd>
                        <hr style="width:101%" class="ml--3" />
                        <dt class="text-danger mt-4">
                            @Html.DisplayNameFor(model => model.AboutDescrition)
                        </dt>

                        <dd class="mt-2">
                            @Html.DisplayFor(model => model.AboutDescrition)
                        </dd>

                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
