@model SailorWeb.Models.Model.About_TBL

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Haqqımızda</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="/Home"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="/About">Haqqımızda</a></li>
                            <li class="breadcrumb-item disable"><a href="/About/Edit/@Model.AboutId">Redaktə</a></li>
                        </ol>
                    </nav>
                </div>

            </div>
        </div>
    </div>
</div>
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0">Məlumat redaktə et</h3>
                </div>
                <!-- Light table -->
                <hr />
                <div class="pl-3">
                    @using (Html.BeginForm("Edit","About",FormMethod.Post,new {@enctye="multipart/form-data"}))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.AboutId)

                            <div class="form-group">
                                @Html.LabelFor(model => model.AboutHeader, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <textarea name="AboutHeader" id="AboutHeader" class="form-control" cols="300" rows="4">@Model.AboutHeader</textarea>
                                    @Html.ValidationMessageFor(model => model.AboutHeader, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.AboutShHeader, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <textarea name="AboutShHeader" id="AboutShHeader" class="form-control" cols="300" rows="5">@Model.AboutShHeader</textarea>
                                    @Html.ValidationMessageFor(model => model.AboutShHeader, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.AboutDescrition, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <textarea name="AboutDescrition" id="AboutDescrition" class="form-control" cols="300" rows="8">@Model.AboutDescrition</textarea>
                                    @Html.ValidationMessageFor(model => model.AboutDescrition, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Yadda saxla" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>