@model SailorWeb.Models.Model.Testimionals_TBL

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Kommandamız</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="/Home/Index"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="/Testimonials/Index">Kommandamız</a></li>
                            <li class="breadcrumb-item"><a href="/Testimonials/Details/@Model.TestimonialsId">Ətraflı</a></li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href="/Testimonials/Create" class="btn btn-sm btn-success">Yeni əlavə et</a>
                    <a href="/Testimonials/Edit/@Model.TestimonialsId" class="btn btn-sm btn-neutral">Redaktə et</a>
                    <a href="/Testimonials/Delete/@Model.TestimonialsId" class="btn btn-sm btn-danger">Sil</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0">Ətraflı baxış</h3>
                </div>
                <!-- Light table -->
                <hr />
                <div class="pl-3">
                    <dl class="dl-horizontal">
                        <dt class="text-danger">
                            @Html.DisplayNameFor(model => model.ImageURL)
                        </dt>

                        <dd class="mt-2">
                            <img src="@Model.ImageURL" height="200px" width="200" />
                        </dd>
                        <hr style="width:101%" class="ml--3" />
                        <dt class="mt-4 text-danger">
                            @Html.DisplayNameFor(model => model.TestimonialJob)
                        </dt>

                        <dd class="mt-2">
                            @Html.DisplayFor(model => model.TestimonialJob)
                        </dd>
                        <hr style="width:101%" class="ml--3" />
                        <dt class="mt-4 text-danger">
                            @Html.DisplayNameFor(model => model.TestimionalDescription)
                        </dt>

                        <dd class="mt-2">
                            @Html.DisplayFor(model => model.TestimionalDescription)
                        </dd>
                        <hr style="width:101%" class="ml--3" />
                        <dt class="mt-4 text-danger">
                            @Html.DisplayNameFor(model => model.NameSurname)
                        </dt>

                        <dd class="mt-2">
                            @Html.DisplayFor(model => model.NameSurname)
                        </dd>

                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>