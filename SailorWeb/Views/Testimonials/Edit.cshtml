@model SailorWeb.Models.Model.Testimionals_TBL

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Rəylər</h6>
                    <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
                        <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                            <li class="breadcrumb-item"><a href="/Home/Index"><i class="fas fa-home"></i></a></li>
                            <li class="breadcrumb-item"><a href="/Testimonials/Index">Rəylər</a></li>
                            <li class="breadcrumb-item"><a href="/Testimonials/Edit/@Model.TestimonialsId">Redaktə</a></li>
                        </ol>
                    </nav>
                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href="/Testimonials/Create" class="btn btn-sm btn-success">Yeni əlavə et</a>
                    <a href="/Testimonials/Delete/@Model.TestimonialsId" class="btn btn-sm btn-danger">Sil</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">
                    <h3 class="mb-0">Məlumat redaktə et</h3>

                </div>
                <!-- Light table -->
                <hr />
                <div class="pl-3">
                    @using (Html.BeginForm("Edit", "Testimonials",FormMethod.Post,new {@enctype="multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.TestimonialsId)
                        <div class="form-group">
                            <label class="control-label col-md-2">Əvvəlki şəkil</label>
                            <div class="col-md-10">
                                <img src="@Model.ImageURL" height="100px" />
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.ImageURL, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <input type="file" name="TestimImage" accept=".png, .jpg, .jpeg" id="ImageURL" class="form-control" />
                                @Html.ValidationMessageFor(model => model.ImageURL, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.TestimonialJob, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TestimonialJob, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TestimonialJob, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.TestimionalDescription, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <textarea id="TestimionalDescription" name="TestimionalDescription" cols="10" rows="10" class = "form-control">@Model.TestimionalDescription</textarea>

                                @Html.ValidationMessageFor(model => model.TestimionalDescription, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.NameSurname, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.NameSurname, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NameSurname, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Yadda saxla" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>

</div>
